<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
   <div class="main">
    <div class="secret-container">
        <button id="buton">My Secrets</button>
    </div>
    <div class="apisecret">
        <p id="secret">
            <%= secret %>
        </p>
        <p id="user">
            <%= user %>
        </p>
    </div>
   </div>
   <script>
    var btn = document.getElementById("buton");
    btn.addEventListener("click", async function() {
        try {
            const response = await fetch("/api/secret");
            if (!response.ok) throw new Error("Network response was not ok");

            const data = await response.json();
            document.getElementById("secret").innerText = data.secret;
            document.getElementById("user").innerText = data.user;
        } catch (error) {
            console.error("Error fetching new secret:", error);
        }
    });
   </script>
</body>
</html>